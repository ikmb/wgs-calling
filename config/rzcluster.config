
// Job paramaters to set for this environment

params.outdir = "output" 

params.splitter = "/home/sukmb352/git/ikmb-wgs-alignment/bin/split_and_compress.sh"

params.picard_jar = "/ifs/data/nfs_share/ikmb_repository/software/picard/2.9.2/picard.jar"
params.gatk_jar = "/ifs/data/nfs_share/ikmb_repository/software/gatk/3.8.0/GenomeAnalysisTK.jar"
params.trimmomatic = "/ifs/data/nfs_share/ikmb_repository/software/trimmomatic/0.36"

params.leading = 3
params.trailing = 3
params.slidingwindow = "4:15"
params.minlen = 36
params.adapters = "TruSeq3-PE-2.fa"

params.scratch = true

// Resource manager settings

executor {
  name="slurm"
  queueSize=25
}

// Process setting

process {

  // Global cluster parameters
  executor = 'slurm'
  queue = 'ikmb_a'
  clusterOptions = { '--qos=ikmb_a' }
  memory = { 8.GB * task.attempt }
  cpus = { 1 * task.attempt }
  time = { 2.h * task.attempt }
  errorStrategy = { task.exitStatus == 143 ? 'retry' : 'finish' }
  maxRetries = 3
  maxErrors = '-1'
 
  // Specific cluster parameters for each process

  $runConcatVcf {
     module = [ 'Java/1.8.0','GATK/4.0.5.1' ]
     time = { 8.h * task.attempt }
     memory = "64GB"
  }

  $runAnalyzeCovariates {
    module = [ 'Java/1.8.0', 'R/3.4.0' , 'GATK/4.0.5.2' ]
    time = { 12.h * task.attempt }
  }
 
  $runDepthOfCoverage { 
    module = [ 'Java/1.8.0' , 'R/3.2.0', 'GATK/4.0.5.2' ]
    time = { 12.h * task.attempt }
  }

  $runCollectMultipleMetrics {
    module = [ 'Java/1.8.0', 'R/3.2.0', 'Picard/2.9.2' , 'Python/2.7.10', "MultiQC/1.4"]
    time = { 18.h * task.attempt }
    memory = "25GB"
  }

  $runMergedFastqc {
    module = [ 'Java/1.8.0' , 'Fastqc/0.11.5', 'Parallel/20131022', 'Pigz/2.3.4']
    time = { 8.h * task.attempt }
    cpus = 16
  }

  $runMultiQCFastq {
     module = [ "Python/2.7.10" ,"MultiQC/1.4" ]
     time = {  4.h * task.attempt }
     memory = "7GB"
  }

  $runMultiQCLibrary {
     module = [ 'Python/2.7.10',"MultiQC/1.4" ]     
     time = {  4.h * task.attempt }
     memory = "7GB"
  }

  $runMultiQCSample {
     module = [ 'Python/2.7.10',"MultiQC/1.4" ]
     time = {  4.h * task.attempt }
     memory = "7GB"
  }

  $runHCSample {
    module =  [ "Java/1.8.0", "GATK/4.0.5.1" ]
    cpus=4
    memory = { 40.GB * task.attempt }
    time = { 72.h * task.attempt }
  } 

  $runCombineGVCFSample {
    module = [ "Java/1.8.0", "GATK/4.0.5.1" ]
    cpus = 1
    memory = { 32.GB * task.attempt }
    time = { 8.h * task.attempt }
  }

  $runGenomicsDBImport {
     module =  [ "Java/1.8.0" , "Python/2.7.14", "GATK/4.0.5.1" ]
     memory = { 62.GB * task.attempt }
     time = { 148.h * task.attempt }
     cpus = 8
  } 

  $runJoinedGenotyping {
 	module =  [ "Java/1.8.0" , "Python/2.7.14", "GATK/4.0.5.1" ]
        cpus=8
        memory = { 48.GB * task.attempt }
        time = { 48.h * task.attempt }
  }

  $combineVariantsFromGenotyping {
	module = [ 'Zlib/1.2.11','Vcftools/0.1.15', 'HTSlib/1.3' , 'Coreutils/8.27']
	time = { 12.h * task.attempt }
	memory = "26GB"
  }

  $runRecalibrationModeSNP {
	module =  [ "Java/1.8.0" , "GATK/4.0.5.1" , "R/3.2.0"]
	cpus=8
	memory = { 25.GB * task.attempt }
	time = { 16.h * task.attempt }
  }

  $runRecalibrationModeIndel {
        module =  [ "Java/1.8.0" , "GATK/4.0.5.1" , "R/3.2.0"]
        cpus=8
        memory = { 25.GB * task.attempt }
        time = { 16.h * task.attempt }
  }

  $runRecalIndelApply {
	module =  [ "Java/1.8.0" , "GATK/4.0.5.1" ]
        memory = { 25.GB * task.attempt }
        time = { 16.h * task.attempt }
  }

  $runRecalSNPApply {
	module =  [ "Java/1.8.0" , "GATK/4.0.5.1" ]
        memory = { 25.GB * task.attempt }
        time = { 16.h * task.attempt }
  } 

  $runVariantFiltrationIndel {
	module =  [ "Java/1.8.0" , "GATK/4.0.5.1" ]
        memory = { 25.GB * task.attempt }
        time = { 8.h * task.attempt }
  }

  $runCombineVariants {
	module =  [ "Java/1.8.0" , "GATK/4.0.5.1" ]
        memory = { 16.GB * task.attempt }
        time = { 12.h * task.attempt }
  }

}

